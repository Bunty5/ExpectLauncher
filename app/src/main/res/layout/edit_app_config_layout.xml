<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="@dimen/dp_8"
    android:layout_marginTop="@dimen/dp_8"
    android:paddingBottom="16dp"
    >
    <ImageView
        android:id="@+id/toggleButton"
        android:layout_width="35dp"
        android:layout_height="5dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/slide_up_down_icon_drawable"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/icon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/toggleButton"
        android:background="@color/FlatWhite"
        android:cropToPadding="true"
        app:riv_mutate_background="true"
        app:riv_corner_radius="12dp"
        app:riv_border_color="@color/FlatBlue"/>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/title"
        app:layout_constraintBottom_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="@id/title"
        app:layout_constraintEnd_toEndOf="@id/edit_button"
        android:alpha="0.6"
        android:background="@drawable/black_rounded_big_light_alpha"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"/>
    <EditText
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="Title App"
        app:layout_constraintTop_toTopOf="@id/icon"
        app:layout_constraintStart_toEndOf="@id/icon"
        app:layout_constraintEnd_toStartOf="@id/edit_button"
        android:layout_marginTop="5dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:gravity="center_vertical"
        android:layout_marginStart="10dp"
       android:background="@android:color/transparent"
        android:textColor="#FF888888"
        android:textSize="14sp"
        android:inputType="none"
        android:textStyle="bold"/>
    <ImageView
        android:id="@+id/edit_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/ic_edit_black_24dp"
        android:tint="@color/FlatBlue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/title"
        android:padding="9dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="20dp"/>
    <View
        android:id="@+id/app_info_panel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/app_info_icon"
        app:layout_constraintEnd_toEndOf="@id/app_info_text"
        app:layout_constraintTop_toTopOf="@id/app_info_icon"
        app:layout_constraintBottom_toBottomOf="@id/app_info_icon"
        android:backgroundTint="#22007AFF"
        android:background="@drawable/black_rounded_big"
        />

    <ImageView
        android:id="@+id/app_info_icon"
        android:layout_width="28dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:padding="4dp"
        android:tint="@color/FlatBlue"
        app:layout_constraintStart_toStartOf="@id/title"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:srcCompat="@drawable/ic_info_outline_black_24dp" />
    <TextView
        android:id="@+id/app_info_text"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/app_info_icon"
        app:layout_constraintTop_toTopOf="@id/app_info_icon"
        app:layout_constraintBottom_toBottomOf="@id/app_info_icon"
        android:text="App info"
        android:gravity="center_vertical"
        android:paddingStart="0dp"
        android:paddingEnd="10dp"
        android:textSize="12sp"
        android:textStyle="bold"/>
    <View
        android:id="@+id/recyclerview_panel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/recycler_view_label"
        app:layout_constraintBottom_toBottomOf="@id/recycler_view_label"
        app:layout_constraintStart_toStartOf="@id/recycler_view_label"
        app:layout_constraintEnd_toEndOf="@id/recycler_view"
        android:alpha="0.5"
        android:background="@drawable/black_rounded_big_light_alpha"
        />
    <TextView
        android:id="@+id/recycler_view_label"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:paddingStart="20dp"
        app:layout_constraintTop_toTopOf="@id/recycler_view"
        app:layout_constraintBottom_toBottomOf="@id/recycler_view"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:text="Background"
        android:textColor="#FF444444"
        android:textSize="16sp"
        android:textStyle="bold"
        />
    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/recycler_view_label"
        app:layout_constraintEnd_toEndOf="@id/edit_button"
        android:id="@+id/recycler_view"
        android:layout_width="0dp"
        android:padding="4dp"
        android:overScrollMode="never"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/icon"
        android:visibility="visible"
       tools:listitem="@layout/item_color_picker"
        tools:orientation="horizontal"
        tools:layoutManager="LinearLayoutManager" />
    <View
        android:id="@+id/seek_panel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/rounded_value_label"
        app:layout_constraintBottom_toBottomOf="@id/rounded_value_label"
        app:layout_constraintStart_toStartOf="@id/icon"
        app:layout_constraintEnd_toEndOf="@id/edit_button"
        android:background="@drawable/black_rounded_big_light_alpha"
      />
    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/rounded_value_label"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:paddingStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/recycler_view"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:text="Icon Pading"
        android:textColor="#FF444444"
        android:textSize="16sp"
        android:textStyle="bold"
        />
    <com.teamll.expectlauncher.ui.widgets.rangeseekbar.RangeSeekBar
        android:id="@+id/corner_seek_bar"
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:rsb_mode="single"

        app:rsb_tick_mark_mode="number"
        app:rsb_indicator_text_size="14sp"
        app:rsb_tick_mark_text_array="@array/paddingArray"
        app:rsb_progress_color="@color/FlatGreen"
        app:rsb_progress_default_color="@color/rsbColorSeekBarDefault"
        app:rsb_tick_mark_text_color="#FF555555"
        app:rsb_thumb_drawable="@drawable/seekbar_thumb"
        app:rsb_indicator_height="25dp"
        app:rsb_min="0"
        app:rsb_max="20"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:rsb_tick_mark_text_margin="20dp"
        app:rsb_indicator_show_mode="alwaysHide"
        app:rsb_indicator_radius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/rounded_value_label"
        app:layout_constraintTop_toTopOf="@id/rounded_value_label"
        />
    <android.support.v7.widget.SwitchCompat
        android:id="@+id/hide_switch"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:text="  Hide this app"
        app:layout_constraintStart_toStartOf="@id/seek_panel"
        app:layout_constraintEnd_toStartOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@id/corner_seek_bar"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="#FF888888"
        android:padding="10dp"

        android:layout_marginEnd="10dp"
        android:background="@drawable/black_rounded_big_light_alpha"
        />
    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.5"/>
    <ImageView
        android:id="@+id/unistall_panel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/unistall_icon"
        app:layout_constraintEnd_toEndOf="@id/unistall_text"
        app:layout_constraintTop_toTopOf="@id/unistall_icon"
        app:layout_constraintBottom_toBottomOf="@id/unistall_icon"
        android:background="@drawable/black_rounded_big_light_alpha"/>
    <ImageView
        android:id="@+id/unistall_icon"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:paddingStart="22dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintEnd_toStartOf="@id/unistall_text"
        app:layout_constraintTop_toTopOf="@id/unistall_text"
        app:srcCompat="@drawable/ic_delete_black_24dp"
        android:tint="@color/FlatRed"/>
    <TextView
        android:id="@+id/unistall_text"
        android:layout_width="0dp"

        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/hide_switch"
        app:layout_constraintBottom_toBottomOf="@id/hide_switch"
        app:layout_constraintStart_toEndOf="@id/unistall_icon"
        app:layout_constraintEnd_toEndOf="@id/seek_panel"
        android:text="Uninstall"
        android:gravity="center_vertical"
        android:layout_marginStart="10dp"
        android:textColor="@color/FlatRed"
        android:textStyle="bold"
        />
    <ImageView
        android:id="@+id/hide_alert_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="@id/hide_switch"
        app:layout_constraintTop_toBottomOf="@id/hide_switch"
        android:tint="@color/FlatBlue"
        android:padding="4dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="10dp"
        app:srcCompat="@drawable/ic_info_outline_black_24dp"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/hide_alert_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/hide_alert_icon"
        app:layout_constraintTop_toTopOf="@id/hide_alert_icon"
        app:layout_constraintBottom_toBottomOf="@id/hide_alert_icon"
        app:layout_constraintEnd_toEndOf="@id/seek_panel"
        app:layout_constraintTop_toBottomOf="@id/hide_switch"
        android:textColor="@color/FlatBlue"
        android:text="This app is hidden. Go to Launcher Setting | Applications to show app again."
        android:textSize="12sp"
        android:textStyle="bold"
        android:visibility="gone"
       />
</android.support.constraint.ConstraintLayout>