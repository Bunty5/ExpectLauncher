<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.teamll.expectlauncher.ui.main.appdrawer.AppDrawerFragment">
    <com.teamll.expectlauncher.ui.widgets.DarkenRoundedBackgroundFrameLayout
        android:id="@+id/recycler_view_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:layout_margin="@dimen/app_drawer_margin"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        app:blur="false"
        app:round_number="1.75"
        app:round_back_color="#FFEEEEEE">
            <com.simplecityapps.recyclerview_fastscroll.views.FastScrollRecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/recycler_view_margin_top"
            android:padding="@dimen/recycler_view_padding"
            android:overScrollMode="never"

                android:clipChildren="false"
                android:clipToPadding="false"
                app:fastScrollAutoHide="true"
                app:fastScrollAutoHideDelay="1500"
                app:fastScrollPopupBackgroundSize="88dp"
                app:fastScrollPopupBgColor="@color/colorAccent"
                app:fastScrollPopupPosition="adjacent"
                app:fastScrollPopupTextColor="@android:color/primary_text_dark"
                app:fastScrollPopupTextSize="56sp"
                app:fastScrollThumbEnabled="true"
                app:fastScrollThumbColor="@color/colorAccent"
                app:fastScrollThumbInactiveColor="#88007AFF"
                app:fastScrollEnableThumbInactiveColor="true"

           />
        <com.teamll.expectlauncher.ui.widgets.MotionRoundedBitmapFrameLayout
            android:id="@+id/search_back_ground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/search_bar_margin"
            android:layout_marginEnd="@dimen/search_bar_margin"
            android:layout_marginTop="@dimen/search_bar_margin"
            android:background="@android:color/transparent"
            app:round_number="1"
            app:background_alpha="0.35"
            app:blur="false"
            app:round_back_color="@android:color/black"
            >
            <android.support.v7.widget.SearchView
                android:id="@+id/search_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/search_bar_height"
                android:iconifiedByDefault="false"
                app:queryHint="@string/search_string"

                android:focusable="true"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:queryBackground="@android:color/transparent"
                app:queryBackground="@android:color/transparent"
                />
        </com.teamll.expectlauncher.ui.widgets.MotionRoundedBitmapFrameLayout>
    </com.teamll.expectlauncher.ui.widgets.DarkenRoundedBackgroundFrameLayout>
</FrameLayout>